 page {
   width: 100%;
  /* overflow: hidden;  */
} 
 .all{
  width: 100%;
  overflow: hidden;
} 

.bg {
  height: 100%;
  background-color: #fff;
 
}

.new-img {
  width: 98rpx;
  height: 108rpx;
  margin: 360rpx 330rpx 20rpx;
}

.new {
  text-align: center;
  font-size: 34rpx;
  margin: 5rpx;
  color: #bbb;
}

.filter-title {
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  text-align: center;
  height: 1.5;
  line-height: 1.5;
  background-color: #fff1f4;
  /* border-bottom: 1px solid #e8e8e8; */
}

.filter-title text {
  color: #6b6b6b;
}

.filter-img {
  width: 26rpx;
  height: 14rpx;
  vertical-align: middle;
  /* transition:all 0.5s;  */
  transform: rotate(-90deg);
  margin-top: -5rpx;
}

.filter-img.active {
  transform: rotate(0deg);
}
.filter-items {
  font-size: 30rpx;
  position: relative;
}

.item-box {
  z-index: 999;
  position: absolute;
  width: 100%;
  background-color: #fff;
}

.filter-item {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

.filter-item.active {
  color: #fd5e7b;
}

.msg-wrapper {
  display: flex;
  align-items: center;
  height: 164rpx;
  padding: 22rpx 10rpx 20rpx 18rpx;
  border-bottom: 1px solid #eee;
  margin: 0 12rpx;
  overflow: hidden;
  width: 100%;
}

/* 删除按钮 */

.content {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: #fe417c;
  width: 90px;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  position: relative;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.msg-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow: hidden;
  height: 100%;
}

.avatar-box {
  position: relative;
}

.unread-tip {
  position: absolute;
  top: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
}

.avatar {
  border-radius: 50%;
  width: 102rpx;
  height: 102rpx;
}

.msg-container {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  height: 100%;
  padding-top: 10rpx;
}

.msg-row {
  display: flex;
  align-items: center;
  padding-left: 17rpx;
}

.msg-main {
  flex: 1;
}

.username {
  white-space: nowrap;
  font-size: 30rpx;
  color: #666;
  flex: 1;
  font-weight: bold;
}

.text-tip {
  color: #999;
  font-size: 28rpx;
}

.time {
  margin-right: 18rpx;
}

.text-msg {
  width: 100%;
  padding: 10px 0;
  line-height: 22px;
  margin-right: 0;
  white-space: nowrap;
  /* flex: 1; */
  overflow: hidden;
  text-overflow: ellipsis;
}

.invite-btn {
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(to right, #fe417c, #eb1840);
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
  white-space: nowrap;
  /* margin-right: 10rpx; */
}

.msg-wrapper .invite-btn:nth-child(2) {
  margin-right: 20rpx;
}
