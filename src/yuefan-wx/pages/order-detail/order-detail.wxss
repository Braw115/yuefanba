text {
  font-size: 30rpx;
  color: #666;
}
.inner {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.top-view {
  display: flex;
  align-items: flex-start;
  margin: 0 18rpx;
  border-bottom: 2rpx solid #eee;
  padding: 65rpx 0 50rpx 0;
}

.top-text {
  display: flex;
  flex: 1;
  position: relative;
  top: -30rpx;
  left: 45rpx;
  width: 700rpx;
  height: 250rpx;
  }

.top-title {
  font-size: 34rpx;
  padding-bottom: 110rpx;
  font-weight: bold;
  width: 580rpx;
  height: 120rpx;
  justify-content: space-around;
  display: flex;
}

.avatar-block {
  position: relative;
  top: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx 0 0;
  flex-shrink: 0;
  right: 390rpx;
}

.avatar {
  padding: 6rpx;
  width: 120rpx;
  height: 120rpx;
  border: 1rpx dashed #fd5e7b;
  border-radius: 50%;
}

.avatar-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.expired .avatar {
  border-color: #bbb;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
.down-view{
  background-color: #fffafb;
  height:1400rpx;
  margin-top: -10rpx;
}

.main-view {
  padding: 0rpx 44rpx 26rpx 44rpx;
  margin-top: 7rpx;
  position: relative;
  top: 50rpx;

}
.main-view .icon{
  width: 26rpx;
  height: 26rpx;
  margin: 8rpx 18rpx 0 0;
}

.item-row {
  display: flex;
  padding: 10rpx 0;
  margin-top: 12rpx;
}

.title {
  padding-right: 30rpx;
  flex-shrink: 0;
  color:#7b7b7b;
}

.content {
  flex: 1;
  color: #838383;
  font-size: 30rpx;
}
.content2{
  color: #838383;
  font-size: 26rpx;
  margin-top: -20rpx;
}
