.bg {
  width: 100%;
  overflow: hidden;
  height: 1230rpx;
  position: absolute;
  z-index: -1;
  top: 0;
}

page {
  width: 100%;
  overflow: hidden;
}

.scan {
  width: 100%;
  margin-top: 51rpx;
  border-radius: 50%;
  margin-left: -1rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

