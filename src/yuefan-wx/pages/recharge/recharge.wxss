page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.title {
  font-size: 26rpx;
  color: #838383;
  padding: 30rpx 0 15rpx 40rpx;
}

.num-view {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: 30rpx;
}
.view-contain {
  width: 320rpx;
  height: 100rpx;
  background: #ebebeb;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  margin: 15rpx 30rpx 15rpx 0;
}
.view-contain.active {
  background: #fe417c;
}

.view-contain text {
  color: #838383;
  font-size: 34rpx;
}

.view-contain.active text {
  color: #fff;
}

.view-contain .exchange {
  font-size: 26rpx;
  color: #838383;
}
.bottom-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.bottom-text {
  font-size: 26rpx;
  color: #838383;
}
.bottom-text text{
  color: #838383;
}

.contract {
  padding: 10rpx;
  color: #fd5e7b;
}

.bottom-btn {
  background: linear-gradient(to right, #fe417c, #eb1840);
  border-radius: 45rpx;
  width: 664rpx;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  margin: 38rpx 0 83rpx 0;
}
