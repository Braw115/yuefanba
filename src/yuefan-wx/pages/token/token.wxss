page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.top-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  height: 462rpx;
  margin-bottom: 28rpx;
}

.main-view {
  flex: 1;
  position: relative;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.top{
  width: 750rpx;
  height: 416rpx;
}
.top-img{
  width: 100%;
  height: 100%;
}

.bill {
  padding: 18rpx;
  margin: -417rpx 30rpx 0 0;
  align-self: flex-end;
  font-size: 32rpx;
  color: #fff;
}

.remain-text {
  font-size: 32rpx;
  color: #fff;
  margin-top: 24rpx;
}

.remain-token {
  color: #fff;
  font-size: 90rpx;
  text-shadow: 0 8rpx 18rpx RGBA(197, 58, 83, 0.24);
}
.recharge-btn{
  margin-left: 125rpx;
  margin-top: 20rpx;
  width: 500rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  box-shadow: 9rpx 9rpx 8rpx rgba(250, 57, 112, 0.4);
  background: linear-gradient(to right, #fe417c, #eb1840);
  color: #fff;
  font-size: 30rpx;
}

.rnd-btn {
  width: 500rpx;
  border-radius: 45rpx;
  margin: 0 auto;
  line-height: 85rpx;
  text-align: center;
  margin-top: 66rpx;
  font-size: 34rpx;
  color: #FE417C;
  border:1px solid #FC598C
}
.recharge-img{
  width: 500rpx;
  height: 120rpx;
}
