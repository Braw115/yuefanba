page {
  background-color: #fff;
  height: 100%;
}

/* 加载完成前限制最大宽高 */

image {
  width: 300rpx;
  height: 300rpx;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.chat-container {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-top: 30rpx;
}

.bottom-toolbar {
  padding-top: 10rpx;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.bottom-toolbar image:active {
  opacity: 0.6;
}

.pic {
  width: 58rpx;
  height: 58rpx;
  box-sizing: content-box;
  padding: 10rpx 36rpx;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  background: #eef0f4;
  border-radius: 40rpx;
  color: #666;
  font-size: 32rpx;
  padding: 0 30rpx;
}

.send-btn {
  width: 64rpx;
  height: 63rpx;
  box-sizing: content-box;
  padding: 10rpx 35rpx 10rpx 26rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #fff;
  width: 450rpx;
  white-space: nowrap;
  margin: 0 auto;
  margin-bottom: 15rpx;
  padding: 5rpx 0;
  text-align: center;
  background-color: #dadada;
  border-radius: 4rpx;
}

.time-text {
  font-size: 22rpx;
  color: #838383;
  width: 80rpx;
  white-space: nowrap;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
  padding: 5rpx 0;
  text-align: center;
  /* background-color: #dadada;  */
  border-radius: 4rpx;
}

.msg-container {
  display: flex;
  padding: 0 24rpx 20rpx 24rpx;
  margin: 20rpx 0;
}

.avatar {
  width: 97rpx;
  height: 97rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.msg-wrapper {
  position: relative;
  background: #f3f3f3;
  border-radius: 8rpx;
  margin: 9rpx;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  color: #333;
  line-height: 1.5;
  padding: 15rpx 20rpx;
}

.right .msg-wrapper {
  background: #ffe4e9;
  margin-right: 20rpx;
  margin-left: 150rpx;
}

.left .msg-wrapper {
  background: #f3f3f3;
  margin-left: 20rpx;
  margin-right: 130rpx;
}

.msg-wrapper text {
  margin: 0;
  padding: 0;
}

.right {
  flex-direction: row-reverse;
}

.msg-wrapper::before {
  content: '';
  position: absolute;
  border: 10rpx solid transparent;
  border-right-color: #f3f3f3;
  left: -16rpx;
  top: 30rpx;
  z-index: 1;
}

.right .msg-wrapper:before {
  border-right-color: transparent;
  border-left-color: #ffe4e9;
  left: unset;
  right: -16rpx;
}

.chat-pic {
  margin: 10rpx 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
}

