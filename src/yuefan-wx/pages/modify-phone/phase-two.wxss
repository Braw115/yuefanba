  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip {
  margin-top: 50rpx;
  font-size: 40rpx;
}

.input {
  border-bottom: 1px solid #ddd;
  width: 660rpx;
  font-size: 40rpx;
